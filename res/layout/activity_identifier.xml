<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/FielText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="23dp"
                android:layout_toLeftOf="@string/action_settings"
                android:ems="10"
                android:paddingLeft="10dp"
                android:text="@string/id_text"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/FielText"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spinner1"
                android:layout_marginRight="14dp"
                android:text="@string/save" />

            <TextView
                android:id="@+id/FielText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/save"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:paddingLeft="10dp"
                android:text="@string/interaction"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/FielText1"
                android:layout_marginTop="14dp"
                android:padding="10dp"
                android:shrinkColumns="*"
                android:stretchColumns="*" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/TxtRelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/Relationship"
                        android:inputType="textUri"
                        android:lineSpacingExtra="2dp"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtInteraction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/Interaction"
                        android:inputType="textUri"
                        android:lineSpacingExtra="2dp"
                        android:textSize="18sp" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/add_delete"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/save"
                android:layout_alignRight="@+id/save"
                android:layout_below="@+id/tableLayout1"
                android:text="@string/b_id" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/add_delete"
                android:layout_alignBottom="@+id/add_delete"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:text="@string/Cbox" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>