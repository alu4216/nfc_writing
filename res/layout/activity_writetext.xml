<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/FielText2"
                android:contentDescription="@+id/imageView1" />

            <TextView
                android:id="@+id/FielText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:text="@string/wText"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/TxtNombre"
                android:layout_below="@+id/TxtNombre"
                android:background="@drawable/selectormain"
                android:text="@string/Save" />

            <EditText
                android:id="@+id/TxtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/FielText"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:inputType="textUri"
                android:lineSpacingExtra="2dp"
                android:textSize="13sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/FielText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Save"
                android:layout_marginTop="15sp"
                android:ems="10"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/selectormain"
                android:contentDescription="@+id/Back"
                android:src="@drawable/atras" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>